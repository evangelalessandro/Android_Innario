<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number1"
            android:text="1" />

        <Button
            android:id="@+id/two"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number2"
            android:text="2" />

        <Button
            android:id="@+id/three"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number3"
            android:text="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number4"
            android:text="4" />

        <Button
            android:id="@+id/five"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number5"
            android:text="5" />

        <Button
            android:id="@+id/six"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number6"
            android:text="6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number7"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number8"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number9"
            android:text="9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="number0"
            android:text="0" />

        <Button
            android:id="@+id/star"
            style="@style/AppCompat.Button.Flat.Common"
            android:onClick="numOk"
            android:text="ok"
            android:textColor="@color/colorAccent" />

    </LinearLayout>
</LinearLayout>